{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@db/*": ["src/db/*"],
      "@fixtures/*": ["src/fixtures/*"],
      "@utils/*": ["src/utils/*"],
      "@tests/*": ["src/tests/*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*", "playwright.config.ts", "eslint.config.js"],
  "exclude": ["node_modules", "dist"]
}
